body
    font-family font-body
    color color-type-body
    font-weight 200

strong
    font-weight 400

h1, h2, h3, h4, h5, h6
    font-family font-heading
    font-weight 200
    color color-type-heading

    &.center
        text-align center

    &.ruled
        border-bottom 1px solid color-ruler
        padding-bottom 10px

    i
        opacity .4
        margin-right 15px

h1
    font-size 55px
    font-weight 100

h2
    font-size 48px
    font-weight 100

h3
    font-size 38px

h4
    font-size 30px

h5
    font-size 20px

h6
    font-size 13px

a
    color color-type-link
    text-decoration none

    img
        border 0

h1, h2, h3, h4, h5, h6, p, ul, ol, input, button, textarea, code, .box
    margin-top 0
    margin-bottom 20px

    &:last-child
        margin-bottom 0

hr
    margin-bottom 20px

ul
    list-style square
    padding-left 20px

hr
    background color-ruler
    border 0
    height 1px